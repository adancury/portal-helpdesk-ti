@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 60px auto;
        padding: 30px;
        background: #f4f4f4;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .login-container img {
        display: block;
        margin: 0 auto 20px auto;
        max-width: 200px;
    }

    .login-container h2 {
        text-align: center;
        color: #003366;
    }

    .login-container label {
        font-weight: bold;
        color: #003366;
    }

    .login-container input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .login-container button {
        width: 100%;
        padding: 10px;
        background-color: #003366;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
    }

    .login-container button:hover {
        background-color: #0055a5;
    }

    .erro-login {
        color: red;
        text-align: center;
        margin-bottom: 10px;
    }
</style>

<div class="login-container">
    <img src="~/images/logo.png" alt="Logo da Empresa" />

    <h2>Acesso ao Portal Helpdesk</h2>

    <form method="post">
        <label>Email:</label>
        <input type="email" name="email" required />

        <label>Senha:</label>
        <input type="password" name="senha" required />

        <button type="submit">Entrar</button>

        @if (ViewBag.Erro != null)
        {
            <div class="erro-login">@ViewBag.Erro</div>
        }
    </form>
</div>
